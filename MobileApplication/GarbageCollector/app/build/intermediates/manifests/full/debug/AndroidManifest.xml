<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mahisha.garbagecollector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_mainapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mahisha.garbagecollector.SetPathActivity"
            android:parentActivityName="com.example.mahisha.garbagecollector.MainActivity" />
        <activity android:name="com.example.mahisha.garbagecollector.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mahisha.garbagecollector.TasksActivity"
            android:label="@string/title_activity_tasks"
            android:parentActivityName="com.example.mahisha.garbagecollector.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.mahisha.garbagecollector.actSettings"
            android:parentActivityName="com.example.mahisha.garbagecollector.MainActivity" />
        <activity
            android:name="com.example.mahisha.garbagecollector.activityHelp"
            android:parentActivityName="com.example.mahisha.garbagecollector.MainActivity" />
    </application>

</manifest>